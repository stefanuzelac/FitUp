<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="BaseTheme.FitnessApp2" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/exo2_font_family</item>
    </style>

    <!-- Light theme -->
    <style name="Theme.FitnessApp2" parent="BaseTheme.FitnessApp2">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="colorPrimaryLighter">@color/primary_lighter</item>
        <item name="colorSecondaryLighter">@color/secondary_lighter</item>
        <item name="colorSecondaryVariantLighter">@color/secondary_variant_lighter</item>

    </style>

    <style name="Theme.FitnessApp2.NoActionBar" parent="Theme.FitnessApp2">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomNumberPickerStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/secondary</item>
    </style>

    <style name="CoolSnackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:background">@color/primary</item>
        <item name="android:textColor">@color/on_primary</item>
    </style>
</resources>