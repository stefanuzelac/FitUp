<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="BaseTheme.FitnessApp2" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:fontFamily">@font/exo2_font_family</item>
    </style>

    <!-- Light theme -->
    <style name="Theme.FitnessApp2" parent="BaseTheme.FitnessApp2">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.FitnessApp2.NoActionBar" parent="Theme.FitnessApp2">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/primary_variant</item>
        <item name="colorAccent">@color/secondary</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="background">@color/background</item>
        <item name="backgroundColor">@color/background</item>
    </style>

    <style name="CustomNumberPickerStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/secondary</item>
    </style>

</resources>
