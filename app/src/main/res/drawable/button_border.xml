<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Solid background -->
    <item android:top="4dp" android:bottom="4dp">
        <shape>
            <solid android:color="@color/primary" />
        </shape>
    </item>

    <!-- Top Border -->
    <item android:height="4dp">
        <shape>
            <solid android:color="@color/secondary_variant" />
        </shape>
    </item>

    <!-- Bottom Border -->
    <item android:height="4dp" android:gravity="bottom">
        <shape>
            <solid android:color="@color/secondary_variant" />
        </shape>
    </item>

</layer-list>
