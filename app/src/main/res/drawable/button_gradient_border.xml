<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Gradient Background -->
    <item>
        <shape>
            <gradient
                android:angle="135"
                android:endColor="?attr/colorPrimaryLighter"
                android:startColor="?attr/colorSecondaryVariantLighter" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Border -->
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="2dp"
                android:color="?attr/colorSecondaryVariant" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</layer-list>