<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Dark theme -->
    <style name="Theme.FitnessApp2" parent="BaseTheme.FitnessApp2">
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_variant_dark</item>
        <item name="colorOnPrimary">@color/on_primary_dark</item>
        <item name="colorSecondary">@color/secondary_dark</item>
        <item name="colorSecondaryVariant">@color/secondary_variant_dark</item>
        <item name="colorOnSecondary">@color/on_secondary_dark</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.FitnessApp2.NoActionBar" parent="Theme.FitnessApp2">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/primary_variant_dark</item>
        <item name="colorAccent">@color/secondary_dark</item>
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="background">@color/background_dark</item>
        <item name="backgroundColor">@color/background_dark</item>
    </style>

    <style name="CustomNumberPickerStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/secondary_dark</item>
    </style>

</resources>
