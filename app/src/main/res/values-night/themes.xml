<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Dark theme -->
    <style name="Theme.FitnessApp2.Dark" parent="BaseTheme.FitnessApp2">
        <!-- Dark theme attributes -->
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_variant_dark</item>
        <item name="colorOnPrimary">@color/on_primary_dark</item>
        <item name="colorSecondary">@color/secondary_dark</item>
        <item name="colorSecondaryVariant">@color/secondary_variant_dark</item>
        <item name="colorOnSecondary">@color/on_secondary_dark</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="colorPrimaryLighter">@color/primary_lighter_dark</item>
        <item name="colorSecondaryLighter">@color/secondary_lighter_dark</item>
        <item name="colorSecondaryVariantLighter">@color/secondary_variant_lighter_dark</item>

    </style>

    <style name="Theme.FitnessApp2.Dark.NoActionBar" parent="Theme.FitnessApp2.Dark">
        <!-- Dark theme attributes without action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomNumberPickerStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/secondary_dark</item>
    </style>

    <style name="CoolSnackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:background">@color/primary_dark</item>
        <item name="android:textColor">@color/on_primary_dark</item>
    </style>

    <style name="CustomCalendarViewStyle" parent="Widget.MaterialComponents.MaterialCalendar">
        <item name="fontFamily">@font/exo2_font_family</item>
    </style>

</resources>