                        android:clickable="true"
                        android:contentDescription="@string/glutes"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/glutes_icon"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/ic_glutes" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/glutes_icon"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="8dp"
                                android:text="GLUTES"
                                android:textSize="13sp" />
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- HAMSTRINGS CardView -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/hamstrings_card"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="1dp"
                        android:clickable="true"
                        android:contentDescription="@string/hamstrings"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/hamstrings_icon"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/ic_hamstrings" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/hamstrings_icon"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="8dp"
                                android:text="HAMSTRINGS"
                                android:textSize="13sp" />
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- QUADRICEPS CardView -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/quadriceps_card"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="1dp"
                        android:clickable="true"
                        android:contentDescription="@string/quadriceps"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/quadriceps_icon"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/ic_quadriceps" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/quadriceps_icon"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="8dp"
                                android:text="QUADRICEPS"
                                android:textSize="13sp" />
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                </GridLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/exercises_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

        </FrameLayout>

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:headerLayout="@layout/nav_header"
            app:menu="@menu/drawer_menu" />

    </androidx.drawerlayout.widget.DrawerLayout>


</LinearLayout>